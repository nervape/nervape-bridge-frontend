{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ESNext",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "es2018",
            "ES2020",
            "dom"
        ],
        "skipLibCheck": true,
        "preserveSymlinks": true,
        "rootDir": "./",
        "outDir": "./dist/js",
    },
    "include": ["./src/**/*", "./dist/ts/**/*", "./schemas/*.json", "./build/**/*.json", "./scripts", "./test", "src", "images.d.ts"],
    "files": ["./hardhat.config.ts"]
  }